<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="69dp"
        app:layout_constraintBottom_toTopOf="@+id/score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/kenny"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:onClick="ScoreKenny"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/kenny2"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:onClick="ScoreKenny"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/kenny3"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:onClick="ScoreKenny"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/kenny4"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:onClick="ScoreKenny"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/kenny5"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:onClick="ScoreKenny"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/kenny6"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:onClick="ScoreKenny"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/kenny7"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:onClick="ScoreKenny"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/kenny8"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:onClick="ScoreKenny"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/kenny" />

        <ImageView
            android:id="@+id/kenny9"
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:onClick="ScoreKenny"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/kenny" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="154dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="458dp"
        android:text="Time:"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="154dp"
        android:layout_height="0dp"
        android:layout_marginBottom="37dp"
        android:text="Score:"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>